<% provide(:title, 'New Subcategory') %>
<h1>New Subcategory</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subcategory) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= hidden_field_tag :categories_id, @kitty%>
      <%= f.submit "Create new Subcategory", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

<%= link_to 'Back', subcategories_path %>