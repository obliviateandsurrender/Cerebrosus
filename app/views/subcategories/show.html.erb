

  <h1>Subcategory: <%= @subcategory.title %></h1>
  <div class="col-md-6 col-md-offset-3">
  <table class="table-striped center table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @quiz.each do |quiz| %>
      <tr>
        <%if current_user.admin%>
        <td><%= link_to quiz.title, quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Leaderboard', '/leaderboard/quiz?qid='+quiz.id.to_s%> </td>
        <%else%>
        <td><%= link_to quiz.title,  arenas_path(:qid => quiz) %></td>
        <td><%= link_to 'Leaderboard', '/leaderboard/quiz?qid='+quiz.id.to_s%> </td>        
        <%end%>
      </tr>
    <% end %>

  </tbody>    
  </table>
  </div>
<br/>
<br/>
<%= link_to 'Back', '/categories/'+ @subcategory.categories_id.to_s  %> <br/>
<%if current_user.admin%>
<%= link_to 'Edit', edit_subcategory_path(@subcategory) %> <br/>
<%= link_to 'New Quiz', new_quiz_path(:subcat => @subcategory.id ) %><br/>
<%end%>
<%= link_to 'Leaderboard', '/leaderboard/subcategory?sid='+@subcategory.id.to_s%> <br/>
