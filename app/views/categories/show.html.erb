

<h1>Category:  <%= @category.title %></h1>
  <div class="col-md-6 col-md-offset-3">
  <% if @subcategory%>
  <table class="table-striped center table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategory.each do |subcategory| %>
      <tr>
        <td><%= link_to subcategory.title, subcategory %></td>
        <%if current_user.admin %>
        <td><%= link_to 'Edit', edit_subcategory_path(@category) %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <td><%= link_to 'Leaderboard', '/leaderboard/subcategory?sid='+subcategory.id.to_s %></td>
      </tr>
    <% end %>
  </tbody>      
  </table>
  <%end%>
  </div>
</p>
        
<br/>
<br/>
<%= link_to 'Back', categories_path  %> <br/>
<%if current_user.admin%>
<%= link_to 'Edit', edit_category_path(@category) %> <br/>
<%= link_to 'Leaderboard', '/leaderboard/category?cid='+@category.id.to_s %><br/>
<%= link_to 'Add Subcategories', new_subcategory_path(:cat => @category.id )%> <br/>
<%else%>
<%= link_to 'Leaderboard', '/leaderboard/category?cid='+@category.id.to_s %> <br/>
<%end%>