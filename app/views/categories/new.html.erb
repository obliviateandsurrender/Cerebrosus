<% provide(:title, 'New Category') %>
<h1>New Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.submit "Create new Category", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

<%= link_to 'Back', categories_path %>
