
<% provide(:title, 'Update Quiz') %>
<h1> Update Quiz </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quiz) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= hidden_field_tag :subcategories_id, @kitty%>
      <%= f.submit "Update new Quiz", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @quiz %> |
<%= link_to 'Back', quizzes_path %>