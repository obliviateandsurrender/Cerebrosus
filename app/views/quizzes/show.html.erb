

<h1>Quiz: <%= @quiz.title %></h1>
  <div class="col-md-6 col-md-offset-3">
  <table class="table-striped center table-hover">
  <thead>
    <tr>
      <th>Question Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% i = 1%>
    <%if @question && current_user.admin%>
    <% @question.each do |question| %>
      <tr>
        <td><%= link_to 'Question '+i.to_s, question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%i+=1%>
    <% end %>
    <% end %>
  </tbody>      
  </table>
  </div>
<br/>
<br/>
<%= link_to 'Back', '/subcategories/'+ @quiz.subcategories_id.to_s  %><br/>
<%if current_user.admin%>
<%= link_to 'Edit', edit_quiz_path(@quiz) %><br/>
<%= link_to 'Add Questions', new_question_path(:quiz => @quiz.id )%><br/>
<%end%>
<%= link_to 'Leaderboard', '/leaderboard/quiz?qid='+@quiz.id.to_s%> <br/>
<%= link_to 'Parent Subcategory', '/subcategories/'+@quiz.subcategories_id.to_s%> <br